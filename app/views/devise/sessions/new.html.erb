<body class=' bg-dark'>

<div class="d-flex my-5">
<div class="w-25 mx-auto shadow-lg p-4 my-5 rounded-bottom rounded-right bg-light">
<h2 class='text-center'>Log in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs d-block">
    <%= f.input :username,
                required: false,
                autofocus: true,
                class:'w-50 mx-auto',
                input_html: { autocomplete: "username", class:'' },
                label_html: { class:'text-center' } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class:'' },
                label_html: { class:'text-center' } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class:'btn-outline-dark mb-4' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>

</body>
